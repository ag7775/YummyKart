<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="hu.pe.yummykart.yummykart.AboutAppActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/sms_otp_gradient">

        <RelativeLayout
            android:id="@+id/rv0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@mipmap/logo" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv0"
        android:layout_marginTop="0dp"
        android:id="@+id/rv1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="order in cloud and delivered at doorstep!"
            android:textColor="#ffbc00"
            android:textStyle="italic"
            android:textSize="12sp"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv1"
            android:layout_marginTop="50dp"
            android:id="@+id/rv2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Who we are?"
                android:textColor="#ffffff"
                android:textStyle="italic"
                android:textSize="20sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv2"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="YummyKart is Odisha's most convenient online food ordering app.It connects people with the best restaurants around them. We believe food is a pleasure and food ordering should be fast and definitely a fun experience."/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv3"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:text="Developers"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv4"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#ffbc00"
                android:text="Akshay Mishra: akshaymishranishu@gmail.com"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv5"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#ffbc00"
                android:text="Pranshu Soni: pranshu1468@gmail.com"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="CopyrightÂ© 2017 yummykart"/>
        </RelativeLayout>
        
    </RelativeLayout>
