<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:id="@+id/card_view"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    card_view:cardCornerRadius="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#424242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        android:textStyle="bold" />
        <ImageView
            android:id="@+id/typelogo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_item"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item"
        android:textColor="#279258"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        />
        <TextView android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item"
            android:textColor="#795548"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_price"
            android:layout_marginLeft="10dp"
            />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:textColor="@color/red"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        />

        <Button
            android:id="@+id/buttoninc"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:text="+"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_price"
            android:layout_marginTop="12dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/inc_dec_button"/>
        <TextView
            android:id="@+id/qty_btw_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttoninc"
            android:layout_toLeftOf="@+id/buttoninc"
            android:textSize="15sp"
            android:layout_marginTop="5sp"
            android:textColor="#ffffff"
            android:background="#70cc20"
            />

        <Button
            android:id="@+id/buttondec"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:text="âˆ’"
            android:layout_toLeftOf="@+id/qty_btw_buttons"
            android:layout_alignTop="@+id/buttoninc"
            android:layout_alignBottom="@+id/buttoninc"
            android:background="@drawable/inc_dec_button"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>