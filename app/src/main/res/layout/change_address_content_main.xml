<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hu.pe.yummykart.yummykart.ChangeAddressActivity"
    tools:showIn="@layout/activity_change_address">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_change_address_acctivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Your Delivery Details"
            android:id="@+id/cnf_add_tv"
            android:background="#ededed"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingTop="7dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_pin"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="number"
                android:textColor="#000000"
                android:ems="10"
                android:maxLength="6"
                android:hint="Pin code *"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/change_pin_btn_ll"
            android:layout_toRightOf="@id/input_layout_pin"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:paddingLeft="10dp"
            android:layout_alignBottom="@+id/input_layout_pin"
            android:paddingRight="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/change_pin_btn"
            android:text="change PIN"
            android:textColor="#70cc20"
            android:background="@drawable/change_pin_button"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/input_layout_pin"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:textSize="15sp"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/separator_1"
            android:layout_below="@+id/tv_phone"
            android:layout_marginTop="5dp"
            android:background="#ededed"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_below="@+id/separator_1"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:singleLine="true"
                android:hint="Name *" />
        </android.support.design.widget.TextInputLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/address_tv"
           android:layout_below="@+id/input_layout_name"
           android:layout_marginTop="10dp"
           android:textSize="17dp"
           android:textStyle="bold"
           android:text="Address"
           android:paddingLeft="10dp"
           />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_address_1"
            android:layout_below="@+id/address_tv"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_address_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:scrollbars="vertical"
                android:hint="Line 1 *" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_address_2"
            android:layout_below="@+id/input_layout_address_1"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_address_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:scrollbars="vertical"
                android:hint="Line 2" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_landmark"
            android:layout_below="@+id/input_layout_address_2"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:scrollbars="vertical"
                android:hint="Landmark *" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/rr"
            android:layout_below="@+id/input_layout_landmark"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonStyleSmall"
                android:text="Save/Change"
                android:id="@+id/change_details_btn"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/change_pin_button"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/separator_2"
            android:layout_below="@+id/rr"
            android:layout_marginTop="20dp"
            android:background="#ededed"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Place Your Order"
            android:id="@+id/tv_place_order"
            android:layout_below="@+id/rr"
            android:layout_marginTop="20dp"
            android:background="#ededed"
            android:textSize="15sp"
            android:gravity="center" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator_2"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/rr2">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/send_button"
                android:id="@+id/btn_place_order"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
