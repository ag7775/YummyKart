<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:clickable="true"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/rr1">
        <ImageView
            android:id="@+id/imageVieww"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_corner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_rest_name"
            android:layout_marginTop="5dp"
            android:textColor="#424242"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_toRightOf="@+id/imageVieww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="dwehgdvhegwvhgvcdvvhc"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="0.0"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:background="@drawable/style5" />

        <TextView
            android:id="@+id/tv_rest_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patia, Bhubaneswar"
            android:layout_below="@+id/tv_rest_name"
            android:layout_toRightOf="@+id/imageVieww"
            android:textAppearance="?android:textAppearanceSmall"
            android:textSize="13sp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/tv_min_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rest_loc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="gdywqd"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/imageVieww"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageVieww"
            android:layout_below="@+id/tv_min_order"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:text="11:00 a.m - 10:00 p.m"
            android:textColor="#795548"
            android:textSize="11sp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="0.1dp"
            android:layout_height="20sp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_min_order"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70sp"
            />

        <TextView
            android:id="@+id/time_status"
            android:layout_marginTop="6dp"
            android:text="CLOSED"
            android:textSize="13sp"
            android:layout_below="@id/tv_min_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#ea5d88"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:id="@+id/ll_discount"
            android:layout_below="@+id/imageVieww"
            android:layout_marginBottom="0dp"
            android:background="@drawable/style4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:paddingBottom="0dp"
                android:paddingTop="3dp"
                android:textStyle="bold"
                android:text="15%  OFF - auto applies at checkout"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#279258"
                android:textSize="12sp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>


