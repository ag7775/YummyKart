<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FADCE6">

        <RelativeLayout
            android:id="@+id/rr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvorderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Order No."
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tvorderno"
                android:paddingLeft="20dp"
                android:text="Amount"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivphone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tvamount"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_phone_black_24dp"
                />

            <Button
                android:id="@+id/order_details_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ivphone"
                android:background="@drawable/view_details"
                android:text="View Detail"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/set_tvorderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvorderno"
                android:layout_below="@+id/tvorderno"
                android:layout_marginTop="5dp"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/set_tvamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvamount"
                android:layout_below="@+id/tvamount"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rr1"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_set_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rr2"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Status"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rr3"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Cancelled"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_placed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_cancelled"
                android:paddingLeft="18dp"
                android:text="Placed"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_placed"
                android:paddingLeft="20dp"
                android:text="Received"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_dispatched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_received"
                android:paddingLeft="12dp"
                android:text="Dispatched"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_delivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_dispatched"
                android:paddingLeft="10dp"
                android:text="Delivered"
                android:textSize="10sp" />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l1"
                android:layout_below="@+id/tv_cancelled"
                android:src="@drawable/linegrey"
                android:paddingTop="5dp"
                android:layout_alignLeft="@+id/tv_cancelled"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l1g"
                android:layout_below="@+id/tv_cancelled"
                android:src="@drawable/b7"
                android:paddingTop="5dp"
                android:layout_alignLeft="@+id/tv_cancelled"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l2"
                android:layout_below="@+id/tv_placed"
                android:src="@drawable/linegrey"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l1"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l2g"
                android:layout_below="@+id/tv_placed"
                android:src="@drawable/b7"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l1g"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l3"
                android:layout_below="@+id/tv_received"
                android:src="@drawable/linegrey"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l2"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l3g"
                android:layout_below="@+id/tv_received"
                android:src="@drawable/b7"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l2g"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l4"
                android:layout_below="@+id/tv_placed"
                android:src="@drawable/linegrey"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l3"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l4g"
                android:layout_below="@+id/tv_placed"
                android:src="@drawable/b7"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l3g"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l5"
                android:layout_below="@+id/tv_dispatched"
                android:src="@drawable/linegrey"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l4"
                />
            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:id="@+id/l5g"
                android:layout_below="@+id/tv_dispatched"
                android:src="@drawable/b7"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/l4g"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rr5"
            android:layout_below="@id/rr4"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rest_name"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>